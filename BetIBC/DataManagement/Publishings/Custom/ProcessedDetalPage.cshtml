@inherits RazorTemplateBase<RazorTemplateModel<Template>>
@using Dynamicweb.Rendering
@using System.Collections.Generic
@using System.Linq
@using Dynamicweb.Core
@using System
@Include("/Files/Templates/Designs/BetIBC/DataManagement/Publishings/Custom/Includes/DepositListAndDetailsVariables.cshtml")
@Include("/Files/Templates/Designs/BetIBC/DataManagement/Publishings/Custom/Includes/DepositListAndDetailsHelpers.cshtml")
@{
var rowID = GetString("RowId");
}

<div class="details-wrapper row" data-attribute-hidden="isHidden">
    <div class="transaction-list-top-navigation">
        <h2>Processed Deposit</h2>
        <div class="transaction-list-top-navigation-wrapper">
            <div>
                <a href="/">Main Page</a>
            </div>
            <div>
                <a href="/">Profits</a>
            </div>
            <div>
                <a href="/">Crosscheck Area</a>
            </div>
        </div>
    </div>
    <div class="details-errors-wrapper">
        <h3>@Translate("Errors", "Errors")</h3>
        @depositErrors(currentDeposit)
    </div>
    <div class="col-xs-12 col-md-6">
        <div class="col-xs-12">

            <div class="container-md-12 " id="UserInfoContainer">
                @userInfoDetails(currentDeposit)
            </div>
        </div>
        <div class="col-xs-12">

            <div class="container-md-12 " id="BookmakerInfoContainer">
                @bookmakerInfoDetails(currentDeposit)
            </div>
        </div>
        <div class="col-xs-12">

            <div class="container-md-12 " id="DepositInfoContainer">
                @depositInfoDetails(currentDeposit)
            </div>
        </div>
        <div class="col-xs-12">

            <div class="container-md-12 " id="AdminInfoContainer">
                @adminInfoDetails(currentDeposit)
            </div>
        </div>
        <div class="col-xs-12">

            <div class="container-md-12 " id="CurrentDepositNotesContainer">
                @currentDepositNotes(currentDeposit)
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-md-6">

        <div class="col-xs-12">

            <div class="container-md-12 " id="CurrencyConversionContainer">
                @currencyConversion(currentDeposit)
            </div>
        </div>
        <div class="col-xs-12">

            <div class="container-md-12 " id="CurrentFeesContainer">
                @extraFees(currentDeposit)
            </div>
        </div>
        <div class="col-xs-12">

            <div class="container-md-12 " id="CurrentFeesContainer">
                @currentFees(currentDeposit)
            </div>
        </div>
        <div class="col-xs-12">

            <div class="container-md-12 " id="moneyToRecover">
                @moneyToRecover(currentDeposit)
            </div>
        </div>
        <div class="col-xs-12">

            <div class="container-md-12 " id="CurrentExceptionsContainer">
                @currentExceptions(currentDeposit)
            </div>
        </div>
        <div class="col-xs-12">

            <div class="container-md-12 " id="BallanceAfterDepositContainer">
                @ballanceAfterDeposit(currentDeposit)
            </div>
        </div>
        <div class="col-xs-12">

            <div class="container-md-12 " id="AgentProfitContainer">
                @agentProfit(currentDeposit)
            </div>
        </div>

    </div>
</div>
<div class="information-about-admin-deposit">
    <div class="row">
        <div class="col-4">
            @confirmationTimestamp(currentDeposit)
        </div>
     
   
  
    </div>
</div>
<div id="detail-back-button">
    <button onclick="goBack()">Back</button>
    <button onclick="location.href='/english/withdraw-transfers-deposits-for-admin/deposits/processed-deposits/finalize-form?FORM_ROW_ID=@rowID&amp;VIEW_ID=103'">Confirm</button>
</div>
