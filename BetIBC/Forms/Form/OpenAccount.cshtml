@inherits Dynamicweb.Rendering.RazorTemplateBase<Dynamicweb.Rendering.RazorTemplateModel<Dynamicweb.Rendering.Template>> 
@using System.Web
@{
    var IP = System.Web.HttpContext.Current.Request.UserHostAddress;
    string pageNameToDisplay = GetGlobalValue("Global:Page.Name");
    var referralUrl = HttpContext.Current.Request.UrlReferrer != null ? HttpContext.Current.Request.UrlReferrer.ToString() : "no refferal";
}   
<div class="paragraph-container__grid--bleed sign-up-form">
    <div class="grid grid--justify-center">
        <div class="grid__col-md-9 grid__col--bleed">
            @GetValue("Form.FormStart")
            @GetValue("Form.SystemFields")  
            <div class = "grid">
                @textInput("First Name", "FirstName", "true", "text")
                @textInput("Last Name", "LastName", "true", "text")     
                @textInput("Email", "Email", "true","email")      
                @textInput("Phone", "Phone", "true", "tel") 
                @select("Country", "Country", "true", "grid__col-md-4")    
                @textInput("Language", "Language", "true", "text", "grid__col-md-4")
                @select("Time zone", "Timezone", "true", "grid__col-md-4")
                @select("Currency", "Currency", "true")  
                @paymentMethodCheckboxes()
                @select("Instant Messenger ID", "InstantMessengerID", "false")
                @textInput("Messenger ID", "Messengerid", "false", "hidden")
                <div class="grid__col-md-12 checkbox">
                    @checkboxInput("I am over 18 years old", "Iamover18yearsold", "Iamover18yearsold") 
                </div> 
                <div class="grid__col-md-12 checkbox">
                    @checkboxInput(string.Empty, "IAgreeToTheTermsandConditions", "IAgreeToTheTermsandConditions") 
                </div>
                @textInput("Bookmaker",  "Bookmaker" , "true", "hidden" , string.Empty, @pageNameToDisplay )  
                @textInput("IP",  "IP" , "true", "hidden" , string.Empty, @IP ) 
                @textInput("referralUrl", "referralUrl","true" ,"hidden", string.Empty, @referralUrl  )  
                @textInput("Createyournewaccount", "Createyournewaccount",string.Empty,  "submit",  "btn btn--primary dw-mod", "Create your new account" )

                
            </div>
            @GetValue("Form.FormEnd")
        </div>
    </div>
</div>
@helper textInput(string label = null, string id = null, string required = null, string type = null, string cssClass = null, string value = null)
{
    string requiredLabel = required == "true" ? "*" : "";
    string isRequired = required == "true" ? "required" : "";
    string hideLabel = type != "hidden" ? "" : "hidden";
    string responsiveClass = cssClass != null ? cssClass : "grid__col-md-6";
    string labelId = "label_" + id;
    if (type != "submit")
    {
        <div class="form__field-group @responsiveClass">
            <label id="@labelId" class="@hideLabel" >@Translate(label, label) @requiredLabel</label>
            <input type="@type" name="@id" id="@id" value="@value" @isRequired>
        </div>
    }
    else
    {
        <div class="form__field-group grid__col-md-6">
            <input class ="@responsiveClass" type="@type" name="@id" id="@id" value='@Translate(value)' @isRequired>
        </div>
    }
}
@helper select(string label, string id, string required, string cssClass = null)
{
    string requiredLabel = required == "true" ? "*" : "";
    string isRequired = required == "true" ? "required" : "";
    string responsiveClass = cssClass != null ? cssClass : "grid__col-md-6";
    <div class="form__field-group @responsiveClass">
        <label>@Translate(label, label) @requiredLabel</label>
        <select id="@id" name="@id">     
            @if (id == "Country")
            {
                @countriesOption()
            }
            @if (id == "Timezone")
            {
                @timeZones()
            }
            @if (id == "Currency")
            {
                @currencyies()
            }    
            @if (id == "InstantMessengerID")
            {
                @messengersList()
            }
        </select>
    </div>
} 
@helper checkboxInput(string label = null, string id = null, string name = null, string value = null, string required = null)
{
    int termsPageId = GetPageIdByNavigationTag("TermsConditions");
    var termsAndConditionsPage = "<a href='/Default.aspx?ID=" + termsPageId + "'>" + Translate("Conditions") + "</a>";
    var termsAndConditionsLabel = Translate("IAgreeToThe") + termsAndConditionsPage;
    var labelVariable = id == "IAgreeToTheTermsandConditions" ? termsAndConditionsLabel : @Translate(label);
    var isRequired = required == "true" ? "<span>*</span>" : string.Empty; 
    <label><input type="checkbox" id="@id" name="@name" value="@value">@labelVariable @isRequired</label>
}
