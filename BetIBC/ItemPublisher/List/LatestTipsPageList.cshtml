    <a href = "Default.aspx?ID=@allTips"><i class="fa fa-arrow-right"></i>@Translate("Latest Tips", "Latest Tips")</a>
  </div>*@
</div>     
  <div id="pagination-latest-tips">
  @foreach (var page in GetLoop("ItemPublisher:Items.Paging.Pages5"))
  {
    
    var pageNumber = page.GetString("ItemPublisher:Items.Paging.Pages5.Page.Number");
    var activeClass = pageNumber == currentPage ? "current-page" : "";
    var pageNumberUrl = page.GetString("ItemPublisher:Items.Paging.Pages5.Page.Url");
  
      <div class="page-number">
        <a class="paginationUrl @activeClass" href="@pageNumberUrl">@pageNumber</a>  
      </div>      
  
    }
  </div>
</section>       
