@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.PageViewModel>

@MasterPageFile("MasterNoEcom.cshtml")




@*if (Model.PropertyItem.GetBoolean("ShowBreadcrumb")) {*@
    <div class="grid__col-12 u-color-gray--bg">
      <div class="center-container">
        <div class="u-pull--right">
            @RenderNavigation(new
            {
                id = "breadcrumb",
                template = "breadcrumb.xslt"
            })
        </div>
        <div class="u-pull--left">
           <h3 class="page-title">@Model.Name</h3>
        </div>
      </div>
    </div>
@*}*@


<div class="bookmaker">

   
	@if(Model.Item.GetItems("FAQ").Any()){
    <section class="multiple-paragraphs-container multiple-paragraphs-container-faq">          
        <div class="center-container dw-mod">
            <div class="grid">

                <div class="grid__col-md-12 grid__col-xs-12">
                    <div class="grid__cell">
                        <!-- customer support -->
                        <h3 class="section-title section-title-faq">@Translate("Faq","Faq")</h3>
                        <div id="accordion">
                          @foreach (var q in Model.Item.GetItems("FAQ")) {
                                string question = q.GetString("Question");
                                string answer = q.GetString("Answer");
								
                                <div class="faq-item">
                                    <div class="faq__question"><span>@Translate("Q","Q:")</span> @question</div>
                                    <section class="faq__answer">
                                        <div class="faq__body">
                                            @answer
                                        </div>
                                    </section>
                                </div>
                          }

                      </div>
                    </div>
                </div>
              
            </div>
        </div>
    </section>
    }
    
</div>


