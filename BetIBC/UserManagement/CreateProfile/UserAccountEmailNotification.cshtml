@inherits RazorTemplateBase<RazorTemplateModel<Template>>
@using Dynamicweb.Rendering;
@MasterPageFile("../../EmailMaster.cshtml")
@Include("../../EmailHelpers.cshtml")

<table bgcolor="#FFFFFF" border="0" cellpadding="0" cellspacing="0" width="500" id="emailBody">
    @RenderHeaderSection()
    @RenderMessage()
    @RenderFooterSection()
</table>

@* CONTENT HELPERS *@

@helper RenderHeaderSection()
{
    @RenderHeaderImage();
}

@helper RenderMessage()
{
    Column message = new Column();
    message.subheader = Translate("Hey") + " " + GetString("UserManagement:User.Name");
    message.text.Add("");
    message.text.Add(Translate("Thank you for your registration. With your new profile you are able to add products to your favorite list, maintain your addresses information and get an overview over your orders."));
    message.text.Add("");
    message.text.Add("<strong>" + Translate("Sign in") + ":</strong> " + GetString("UserManagement:User.Email"));
    @CreateRow(message);

    @RenderButton(Dynamicweb.Context.Current.Request.Url.Scheme + "://" + GetGlobalValue("Global:Request.Host"), Translate("Continue shopping"));
}