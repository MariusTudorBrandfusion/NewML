@inherits RazorTemplateBase<RazorTemplateModel<Template>>
@using Dynamicweb.Rendering;
@MasterPageFile("../../EmailMaster.cshtml")
@Include("../../EmailHelpers.cshtml")

<table bgcolor="#FFFFFF" border="0" cellpadding="0" cellspacing="0" width="500" id="emailBody">
    @RenderHeaderSection()
    @RenderMessage()
    @RenderFooterSection()
</table>

@* CONTENT HELPERS *@

@helper RenderHeaderSection()
{
    @RenderHeaderImage();
}

@helper RenderMessage()
{
    Column message = new Column();
    message.subheader = Translate("Email confirmation");
    message.text.Add("");
    message.text.Add(Translate("Dear") + " " + GetString("UserManagement:User.FirstName") + ", ");
    message.text.Add("");
    message.text.Add(Translate("Welcome to BET-IBC, the leading betting agent."));
    message.text.Add(Translate("To get started, activate your BET-IBC account by accessing the button below."));
    message.text.Add("The account will include all the information about your betting account(s).");
    message.text.Add("");
    message.text.Add(Translate("Best regards,"));
    message.text.Add("BET-IBC");

    @CreateRow(message);
        
    @RenderButton(GetString("UserManagement.ApprovalUrl"), "Approve");
}
