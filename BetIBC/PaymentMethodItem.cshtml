@inherits Dynamicweb.Rendering.ViewModelTemplate<Dynamicweb.Frontend.PageViewModel>

@MasterPageFile("MasterNoEcom.cshtml")

@{
    var paymentLogo = ((Dynamicweb.Frontend.FileViewModel)Model.Item.GetValue("Payment_Method_Logo"));
    string paymentMethodName = Model.Item.GetString("Payment_Method_Name"),
           paymentMethodDescription = Model.Item.GetString("Payment_Method_Description"),
           paymentAffiliateLink = Model.Item.GetString("Affiliate_Link"),
           paymentMethodShortDescription = Model.Item.GetString("Payment_Method_Short_Description"),
           paymentMethodVideoTutorial = Model.Item.GetString("Payment_Method_Video_Tutorial"),
           paymentMethodSignUpTutorialDescription = Model.Item.GetString("Payment_Method_Sign_Up_Tutorial_Description"),
           paymentMethodSignUpTutorial = Model.Item.GetString("Payment_Method_Sign_Up_Tutorial"),
           paymentMethodLoginTabDescription = Model.Item.GetString("Login_Tab_Description"),
           paymentMethodLoginAndDepositVideoTutorial = Model.Item.GetString("LoginAnd_Deposit_Video_Tutorial"),
           paymentMethodLoginTutorialShort = Model.Item.GetString("Login_Tutorial_Short"),
           paymentMethodLoginAndDepositTutorialFull = Model.Item.GetString("LoginAnd_Deposit_TutorialFull");
}

@if (Model.PropertyItem.GetBoolean("ShowBreadcrumb")) {
    <div class="grid__col-12 u-color-gray--bg">
      <div class="center-container">
        <div class="u-pull--right">
            @RenderNavigation(new
            {
                id = "breadcrumb",
                template = "breadcrumb.xslt"
            })
        </div>
        <div class="u-pull--left">
           <h3 class="page-title">@Model.Name</h3>
        </div>
      </div>
    </div>
}

<div class="bookmaker payment-methods">

    <!-- Bookmaker Header -->
    @if(paymentLogo != null) {
        <div class="payment-header u-color-gray--bg">
            <div class="payment-logo">
                <img src="@paymentLogo.Path" />
            </div>
        </div>
    }

    <section class="multiple-paragraphs-container">          
        <div class="center-container dw-mod">
            <div class="grid__col-md-12 grid__col-xs-12">
                <div class="grid__cell">
                    @* @if (!string.IsNullOrEmpty(paymentMethodName)) { 
                        <h2>@paymentMethodName</h2>
                    }  *@
                    @if (!string.IsNullOrEmpty(paymentMethodDescription)) { 
                        <div>@paymentMethodDescription</div>
                    } 
                    @if (!string.IsNullOrEmpty(paymentAffiliateLink)) { 
                        <a href="@paymentAffiliateLink" class="btn btn--primary dw-mod u-no-margin">@Translate("Affiliate", "Affiliate")</a>
                    } 
                    
                </div>
            </div>
        </div>
    </section>

    @if (!string.IsNullOrEmpty(paymentMethodShortDescription)) { 
    <section class="u-color-gray--bg">          
        <div class="center-container dw-mod">
            <div class="grid__col-md-12 grid__col-xs-12">
                <div>@paymentMethodShortDescription</div>
            </div>
        </div>
    </section>
    }

    @if (!string.IsNullOrEmpty(paymentMethodVideoTutorial)) { 
    <section class="u-brand-color-one--bg">          
        <div class="center-container dw-mod">
            <div class="grid__col-md-12 grid__col-xs-12">
                <div class="payment-tutorial"><iframe width="854" height="600" src="https://www.youtube.com/embed/@(paymentMethodVideoTutorial)" frameborder="0" gesture="media" allow="encrypted-media" allowfullscreen></iframe></div>
            </div>
        </div>
    </section>
    } 

    <section class="multiple-paragraphs-container">          
        <div class="center-container dw-mod">
            <div class="grid__col-md-12 grid__col-xs-12">
                @if (!string.IsNullOrEmpty(paymentMethodSignUpTutorialDescription)) { 
                    <div>@paymentMethodSignUpTutorialDescription</div>
                } 
            </div>
        </div>
    </section>

    <section class="u-color-gray--bg">          
        <div class="center-container dw-mod">
            <div class="grid__col-md-12 grid__col-xs-12">
                @if (!string.IsNullOrEmpty(paymentMethodSignUpTutorial)) { 
                    <div>@paymentMethodSignUpTutorial</div>
                } 
                @if (!string.IsNullOrEmpty(paymentMethodLoginTabDescription)) { 
                    <div>@paymentMethodLoginTabDescription</div>
                } 
            </div>
        </div>
    </section>   

    <section>          
        <div class="center-container dw-mod">
            <div class="grid__col-md-12 grid__col-xs-12">
                @* @if (!string.IsNullOrEmpty(paymentMethodLoginAndDepositVideoTutorial)) { 
                    <div>@paymentMethodLoginAndDepositVideoTutorial</div>
                } *@
                @if (!string.IsNullOrEmpty(paymentMethodLoginTutorialShort)) { 
                    <div>@paymentMethodLoginTutorialShort</div>
                } 
                @if (!string.IsNullOrEmpty(paymentMethodLoginAndDepositTutorialFull)) { 
                    <div>@paymentMethodLoginAndDepositTutorialFull</div>
                } 
            </div>
        </div>
    </section> 
    

